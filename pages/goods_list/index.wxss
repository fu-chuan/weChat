/* pages/goods_list/index.wxss */
.first-tab .gooods-item {
  display: flex;
}
.first-tab .gooods-item .gooods-img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first-tab .gooods-item .gooods-img image {
  width: 70%;
}
.first-tab .gooods-item .goods-info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first-tab .gooods-item .goods-info .goods-name {
  display: flex;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first-tab .gooods-item .goods-info .goods-price {
  color: #f30d0d;
  font-size: 30rpx;
}
