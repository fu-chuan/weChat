/* pages/cart/index.wxss */
.revice-address-row .address-btn {
  padding: 20rpx;
}
.revice-address-row .address-content {
  margin: 5rpx;
  padding: 10rpx;
  border: 5rpx dashed #ccc;
  border-radius: 10rpx;
  margin-bottom: 25rpx;
}
.revice-address-row .address-content .content {
  overflow: hidden;
}
.revice-address-row .address-content .content .content-un {
  float: left;
  font-size: 30rpx;
}
.revice-address-row .address-content .content .content-tel {
  float: right;
  font-size: 30rpx;
}
.revice-address-row .address-content .content-dz {
  font-size: 30rpx;
}
view.cart-content view.cart-title {
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--tint);
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
view.cart-content view.cart-mian view.cart-item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
view.cart-content view.cart-mian view.cart-item view.cart-wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.cart-content view.cart-mian view.cart-item navigator.cart-img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.cart-content view.cart-mian view.cart-item navigator.cart-img image {
  width: 80%;
}
view.cart-content view.cart-mian view.cart-item view.cart-info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
view.cart-content view.cart-mian view.cart-item view.cart-info view.goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
view.cart-content view.cart-mian view.cart-item view.cart-info view.price-wrap {
  display: flex;
  justify-content: space-between;
}
view.cart-content view.cart-mian view.cart-item view.cart-info view.price-wrap view.goods-price {
  color: red;
  font-size: 34rpx;
}
view.cart-content view.cart-mian view.cart-item view.cart-info view.price-wrap view.num-tool {
  display: flex;
}
view.cart-content view.cart-mian view.cart-item view.cart-info view.price-wrap view.num-tool view.num-edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
view.cart-content view.cart-mian view.cart-item view.cart-info view.price-wrap view.num-tool view.goods-num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.footer-tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
view.footer-tool view.all-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.footer-tool view.total-price-wrap {
  flex: 4;
  text-align: right;
  padding-right: 20rpx;
}
view.footer-tool view.total-price-wrap view.totail-price text.totail-price-text {
  color: red;
  font-size: 32rpx;
}
view.footer-tool view.all-pay-wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background-color: #fa0606;
}
