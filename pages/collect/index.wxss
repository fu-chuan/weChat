.collect-main {
  background-color: #f3f4f6;
}
.collect-main .collect-title {
  padding: 40rpx 0;
}
.collect-main .collect-title .collect-tips {
  padding: 15rpx;
  border: 1rpx solid #ccc;
  margin-left: 25rpx;
  background-color: #fff;
}
.collect-main .collect-title .active {
  color: var(--tint);
  border-color: currentColor;
}
.collect-main .collect-content .goods-item {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.collect-main .collect-content .goods-item .goods-img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect-main .collect-content .goods-item .goods-img image {
  width: 70%;
}
.collect-main .collect-content .goods-item .goods-info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect-main .collect-content .goods-item .goods-info .goods-name {
  display: flex;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect-main .collect-content .goods-item .goods-info .goods-price {
  color: #f30d0d;
  font-size: 30rpx;
}
