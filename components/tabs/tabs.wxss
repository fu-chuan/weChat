/* pages/tabs/tabs.wxss */

.tabs-title {
    display: flex;
    height: 75rpx;
    padding-top: 5rpx;

}
.tabs-title .title-item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;    
    padding: 30rpx 0;
    font-size: 32rpx;
    font-family: Arial;

}
.active {
    background-color: var(--tint);
    color: #fff;
    font-weight: 600;
    border-bottom: 5rpx solid #fff;
}